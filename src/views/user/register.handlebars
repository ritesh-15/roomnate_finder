<div class="flex gap-8 mt-8 flex-col-reverse md:flex-row">

    <form class="w-full md:max-w-[450px]" action="/register" method="POST">
        <h1 class="text-xl font-bold mb-1">Let's get started</h1>
        <p class="mb-4">Create an account in simple step</p>

        <div class="mb-4 flex flex-col">
            <label for="">Name</label>
            <input type="text" name="name" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>

        <div class="mb-4 flex flex-col">
            <label for="">Email address</label>
            <input type="email" name="email" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>


        <div class="mb-4 flex flex-col">
            <label for="">Password</label>
            <input type="password" name="password" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>

        <button class="px-2 py-3 rounded-md bg-primary text-white w-full">
            Create an account
        </button>

        <div class="mt-4 flex items-center justify-center gap-1">
            <small>Already have an account?</small>
            <a class="text-primary font-semibold" href="/login">Login</a>
        </div>
    </form>

