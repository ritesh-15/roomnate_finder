<form class="mb-4" action="">
    <h1 class="text-xl mb-8 font-bold">Create a new room</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="flex flex-col">
            <label for="">Where is room located?</label>
            <input type="text" name="name" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
            <div class="mt-2 flex items-center gap-1 cursor-pointer">
                <img src="/assets/location.png" class="w-4 h-4 object-contain" alt="">
                <small>Use my current location</small>
            </div>
        </div>


        <div class="flex flex-col">
            <label for="">Room name or appartment name</label>
            <input type="email" name="phone" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>

        <div class="flex flex-col">
            <label for="">Room rent(per month)</label>
            <input type="email" name="phone" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>

        <div class="flex flex-col">
            <label for="">Ammenities</label>
            <input type="email" name="phone" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2">
        </div>

    </div>

    <div class="flex flex-col mt-8">
        <label for="">Description</label>
        <textarea name="phone" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2 h-[150px] resize-none"></textarea>
    </div>

    <div class="flex flex-col mt-8">
        <label for="">House rules</label>
        <textarea name="phone" class="px-2 py-3 bg-gray-100 rounded-md
         outline-none mt-2 h-[150px] resize-none"></textarea>
    </div>

    <button class="px-2 py-3 rounded-md bg-primary text-white mt-8 w-full md:w-fit ml-auto">
        Post your request
    </button>
</form>